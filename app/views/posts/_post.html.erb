<div class="post-wrapper" data-controller="post" id="post-<%= post.id %>">
    <div class="post-main-wrapper">
        <div class="post-info-section-wrapper">
            <div class="post-info-wrapper">Ⓐ <%= link_to post.user.name, post.user, class: "post-user" %>, <%= time_ago_in_words(post.created_at) %> назад</div> 
            <% unless post.section.nil? %>
                <div class="post-section"><%= link_to "#{post.section.name}", section_path(post.section) %></div>
            <% end %> 
        </div>
        <div class="post-content-wrapper"><%= run_rinku(post.content) %></div>
        ----------------------------------------------
        <%= post.rich_text_content %>
        ------------------------------------------
        <% post.content.embeds.blobs.each do |blob| %>
            <%= blob.byte_size %>
        <% end %>
        ------------------------------------------
        <% post.content.embeds.blobs.each do |attach| %>
            <%= attach.byte_size %>
            <%= attach.content_type %>
            <%= attach.image? %>
        <% end %>
        ------------------------------------------
        <% post.content.embeds.attachments.each do |attach| %>
            <%= attach.byte_size %>
            <%= attach.content_type %>
            <%= attach.image? %>
        <% end %>
        -----------------------------------------
        <%= post.content.embeds.attachments.methods %>
        ----------------------------------------
        <%= post.content.embeds.blobs %>
        -----------------------------------------
        <%= post.content.embeds.attachments %>
        ---------------------------------------
        <%= post.content.embeds.attached? %>
        ---------------------------------------
        <%= post.content.embeds.methods %>
        ----------------------------------------
        <%= post.content.methods %>
        ----------------------------------------
        <% post.content.embeds.each do |blob| %>
            <%= blob.methods %>
        <% end %>
        ----------------------------------------
        <div class="post-options-likes-wrapper">
            <div class="post-options-wrapper">
                <%= link_to "Ⓟ", edit_post_path(post.id) %> 
                <%= link_to "ⓨ", post , :method => :delete, data: { :confirm => 'Вы уверены?' } %> 
                <%= link_to "Ⓚ", 
                    new_post_comment_path(post.id), 
                    remote: true,
                    data: { 
                        :action => "ajax:success->post#createCommentForm", 
                        :type => "html"
                    }
                %>
            </div>
            <%= render 'likes/like', likeable: post %>
        </div>
    </div>
    <div data-target="post.comments" data-comments=<%= post.comments.any? %> >
        <% if post.comments.any? %>
            <%= render 'comments/comments', commentable: post %>
        <% end %>
    </div>
    <div data-target="post.form" data-form=<%= post.comments.any? ? "open" : "closed" %> >
        <% if post.comments.any? %>
            <%= render template: 'comments/new', object: @new_comment = post.comments.build %>
        <% end %>
    </div>
</div>

