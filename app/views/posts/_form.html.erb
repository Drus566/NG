
<%= form_with(model: @post, id: 'post-form') do |f| %>
    <%= render 'shared/error_messages', object: f.object %> 
    <div id="post-form-tags-all">
        <% @tags.each do |tag| %>
            <span id=<%="#{tag.id}"%>><%= "##{tag.name}" %></span>
        <% end %>
    </div>
    <div id="post-form-tags-active">
        <% @post.tags.each do |tag| %>
            <span id=<%="#{tag.id}"%>><%= "##{tag.name}" %></span>
        <% end %>
    </div>
    <%= hidden_field_tag 'post_tags_active', "" %>
    <%= f.text_area :content, placeholder: "Напишите сообщение...", id: 'post-form-textarea', maxlength: '600' %>
    <%= f.submit yield(:button_text),  id: "post-form-btn" %>  
<% end %>