<%= form_with model: @post, remote: true do |f| %>
    <div class="post-form-tags">
        <div class="tags-all">
            <% @tags.each do |tag| %>
                <span id=<%= "#{tag.id}" %>><%= "#{tag.name}" %></span>
            <% end %>
        </div>
        <div class="tags-active">
            <% @post.tags.each do |tag| %>
                <span id=<%= "#{tag.id}" %>><%= "#{tag.name}" %></span>
            <% end %>
        </div>
    </div>
    <%= hidden_field_tag 'post_tags_active', "" %>
    <%= f.rich_text_area :content, 
        placeholder: "Напишите сообщение...", 
        maxlength: '600'
    %>
    <%= render 'shared/error_messages', 
        object: @post, 
        attribute: 'content' 
    %>
    <%= f.submit yield(:button_text), id: "post-btn" %>  
    
<% end %>

