<% if @comment.errors.empty? %>

    var post_comment = document.getElementById("post_comment_<%= @comment.id %>");
    post_comment.querySelector(".post-comment-edit-link").removeAttribute("href");
    post_comment.querySelector(".post-comment-create-link").removeAttribute("href");
   
    var post_comment_reply = document.createElement("div");
    post_comment_reply.className = 'post-comment-reply';
    
    var post_comment_form = "<%=j render('comments/form', comment: @reply) %>";
        
    post_comment_reply.innerHTML = post_comment_form;

    var post_comment_body = post_comment.querySelector('.post-comment-body');
    post_comment_body.after(post_comment_reply);

<% else %>
    
<% end %>