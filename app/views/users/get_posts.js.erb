<% if @posts %>

    var user_content = document.getElementById("user-account-content-wrapper");
    user_content.innerHTML = "";

    var posts_wrapper = document.createElement('div');
    posts_wrapper.setAttribute('id', 'posts-wrapper');
    
    
    var posts = "<%= j render(partial: 'posts/post', collection: @posts, as: :post, spacer_template: 'posts/post_spacer') %>"
    posts_wrapper.innerHTML = posts;
        
    user_content.append(posts_wrapper);

<% else %>
    
<% end %>