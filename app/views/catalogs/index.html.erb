<div id="catalog-items-wrapper">
    <% if @catalog_items.any? %>
        <div data-controller="new-catalog-item" >
            <div class="new-catalog-item-btn" data-target="new-catalog-item.newBtn">
                <%= link_to 'Создать карточку', new_catalog_item_path,
                    data: {
                        action: "ajax:success->new-catalog-item#show
                                ajax:error->new-catalog-item#addError"
                    },
                    remote: true
                %>
            </div>
        </div>
        <%= render partial: 'catalog_items/catalog_item', 
            collection: @catalog_items, 
            as: :catalog_item 
        %>
    <% else %>
        <div class="message">Нет данных</div>
    <% end %>
</div>


