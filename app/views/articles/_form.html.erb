
<%= form_for(@article) do |f| %>
    <%= f.text_field :title, placeholder: "Название новости...", maxlength: '100', class: 'article-form-title' %>
    <%= f.text_area :body, placeholder: "Содержимое новости...", maxlength: '600', class: 'article-form-body' %>
    <%= render 'shared/error_messages' , object: @article, attribute: 'content' %>
    <%= f.submit yield(:button_text), id: "form-btn" %>  
<% end %>